                    <div class="category-dropdown">
                      <div class="dropdown-item">Coffee Tables</div>
                      <div class="dropdown-item">Side Tables</div>
                    </div>
                  </div>
                  <div class="category-btn">
                    <span>Couples</span>
                    <div class="category-dropdown">
                      <div class="dropdown-item">Radha Krishna</div>
                      <div class="dropdown-item">Modern Couples</div>
                    </div>
                  </div>
                </div>
              </div>
