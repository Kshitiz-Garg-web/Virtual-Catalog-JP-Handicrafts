<% layout('/layouts/boilerplate') -%>

  <div class="row mt-3">
    <div class="col-8 offset-2">

      <h3 class="mt-2 mb-5 mt-md-1"> Welcome to JP Handicrafts</h3>

      <form class="needs-validation" action="/login" method="POST" novalidate>
        <div class="mb-3">
          <label for="email" class="form-label">UserName</label>
          <input required id="email" type="text" class="form-control" name="username" />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please fill it in.</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input required id="password" type="password" class="form-control" name="password" />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please fill it in.</div>
        </div>

        <button class="btn btn-success">LogIn</button>
      </form>
    </div>
  </div>