<% layout('/layouts/boilerplate') -%>

  <div class="row mt-3">

    <div class="col-8 offset-2">

      <h3 class=" mt-2 mb-5 mt-md-1 ">Join the JP Handicrafts family
      </h3>

      <form class="needs-validation" action="/signup " method="POST" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">UserName</label>
          <input required id="username" type="text" class="form-control" name="username"
          placeholder="kshitizGarg" />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please fill it in.</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input required id="email" type="email" class="form-control" name="email" placeholder="jp_handicrafts@store.com" />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please fill it in.</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input required id="password" type="password" class="form-control" name="password" placeholder="*********" />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please fill it in.</div>
        </div>

        <button class="btn btn-success">SignUp</button>
      </form>
    </div>
  </div>